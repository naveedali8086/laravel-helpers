{
  "name": "naveedali8086/laravel-helpers",
  "description": "A collection of helpful Laravel utilities including validation rules, helper functions, and traits",
  "keywords": [
    "laravel",
    "helpers",
    "validation",
    "utilities",
    "php"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Naveed Ali",
      "email": "naveedali8086@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "illuminate/support": "^10.0|^11.0|^12.0",
    "illuminate/validation": "^10.0|^11.0|^12.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0|^11.0",
    "orchestra/testbench": "^8.0|^9.0",
    "mockery/mockery": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "Naveedali8086\\LaravelHelpers\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Naveedali8086\\LaravelHelpers\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Naveedali8086\\LaravelHelpers\\LaravelHelpersServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}